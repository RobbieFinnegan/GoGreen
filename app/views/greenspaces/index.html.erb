<div class="container-fluid">

  <div id="map-container">
      <div id='map'
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      data-markers="<%= @greenspaces_json.to_json %>">
      </div>

      <div id="map-cards">
        <div class="container-fluid">
          <% @greenspaces.each do |greenspace| %>
          <div class="row">
            <div class="col-12">
              <div class="card-gs">
                <h2> <%= greenspace.name %> </h2>
                <p> <%= greenspace.description %> </p>
                <%= image_tag greenspace.picture %>
                <div class="card-gs-infos">
                  <div>
                  </div>
                  <h2 class="card-gs-pricing">
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
  </div>
</div>

<%= javascript_pack_tag 'map' %>
